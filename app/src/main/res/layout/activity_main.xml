<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="Simuladores"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="316dp"
            android:layout_height="58dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Crédito Hipotecario en Colombia"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="316dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:text="* Valor de la propiedad"
            android:textColor="#C00016"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView" />

        <EditText
            android:id="@+id/valorPropiedad"
            android:layout_width="316dp"
            android:layout_height="56dp"
            android:inputType="numberDecimal"
            android:hint="100.000.000"
            android:background="@drawable/edittext_border"
            android:gravity="center_vertical|start"
            app:layout_constraintTop_toBottomOf="@id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="left"
            android:text="El valor de la propiedad no puede ser inferior a\n $71.000.000"
            app:layout_constraintTop_toBottomOf="@id/valorPropiedad"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="316dp"
            android:layout_height="20dp"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif"
            android:text="* ¿Cuánto necesitas?"
            android:textColor="#C00016"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView4" />

        <EditText
            android:id="@+id/valorPrestamo"
            android:layout_width="316dp"
            android:layout_height="56dp"
            android:inputType="numberDecimal"
            android:hint="70.000.000"
            android:background="@drawable/edittext_border"
            android:gravity="center_vertical|start"            app:layout_constraintTop_toBottomOf="@id/textView5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="left"
            android:text="El préstamo mínimo es de $50.000.000 y no puede\n exceder el 70% del valor de la propiedad para\n créditos hipotecarios, mientras que para leasing\n habitacional no puede exceder el 80% del valor de la\n propiedad."
            app:layout_constraintTop_toBottomOf="@id/valorPrestamo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="316dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:text="* ¿A qué plazo necesitas el crédito (años)?"
            android:textColor="#C00016"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView6" />

        <EditText
            android:id="@+id/plazoAnos"
            android:layout_width="316dp"
            android:layout_height="56dp"
            android:inputType="number"
            android:hint="5"
            android:background="@drawable/edittext_border"
            android:gravity="center_vertical|start"            app:layout_constraintTop_toBottomOf="@id/textView7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="left"
            android:text="Van desde los 5 hasta los 20 años. El plazo más\n común es de 20 años."
            app:layout_constraintTop_toBottomOf="@id/plazoAnos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="316dp"
            android:layout_height="20dp"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif"
            android:text="* ¿A qué tasa de interés efectiva anual (TAE)?"
            android:textColor="#C00016"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView8" />

        <EditText
            android:id="@+id/tae"
            android:layout_width="316dp"
            android:layout_height="56dp"
            android:inputType="numberDecimal"
            android:hint="14.03"
            android:background="@drawable/edittext_border"
            android:gravity="center_vertical|start"            app:layout_constraintTop_toBottomOf="@id/textView9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="left"
            android:text="Esta tasa depende de tu historial crediticio y del\n banco en el que pidas el crédito."
            app:layout_constraintTop_toBottomOf="@id/tae"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/simular"
            android:layout_width="316dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/boton_fondo"
            android:text="Simular"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView10" />

        <TextView
            android:id="@+id/resultado"
            android:layout_width="316dp"
            android:layout_height="20dp"
            android:layout_marginTop="72dp"
            android:gravity="center"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/simular"
            tools:text="Paga cuotas de $1.629.866 por mes" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
